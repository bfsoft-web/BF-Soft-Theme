{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version" : 2,
  "settings": {
    "appearanceTools": true,

    "color": {
      "defaultPalette": false,
      "palette": [
        { 
          "slug": "bf-gray-100", 
          "color": "rgb(243 244 246)", 
          "name": "BF Soft Gray 100" 
        },
        
        { 
          "slug": "bf-gray-200", 
          "color": "rgb(229 231 235)", 
          "name": "BF Soft Gray 200" 
        },
        
        { 
          "slug": "bf-gray-300", 
          "color": "rgb(209 213 219)", 
          "name": "BF Soft Gray 300" 
        },
        
        { 
          "slug": "bf-gray-400", 
          "color": "rgb(156 163 175)", 
          "name": "BF Soft Gray 400" 
        },
        
        { 
          "slug": "bf-gray-500", 
          "color": "rgb(107 114 128)", 
          "name": "BF Soft Gray 500" 
        },
        
        { 
          "slug": "bf-gray-600", 
          "color": "rgb(75 85 99)", 
          "name": "BF Soft Gray 600" 
        },
        
        { 
          "slug": "bf-gray-700", 
          "color": "rgb(55 65 81)", 
          "name": "BF Soft Gray 700" 
        },
        
        { 
          "slug": "bf-gray-800", 
          "color": "rgb(31 41 55)", 
          "name": "BF Soft Gray 800" 
        },
        
        { 
          "slug": "bf-gray-900", 
          "color": "rgb(17 24 39)", 
          "name": "BF Soft Gray 900" 
        },
        
        { 
          "slug": "bf-primary", 
          "color": "rgb(239 68 68)", 
          "name": "BF Soft Primary" 
        },
        
        { 
          "slug": "bf-accent", 
          "color": "rgb(67 56 202)", 
          "name": "BF Soft Accent" 
        },
        
        { 
          "slug": "bf-success", 
          "color": "rgb(52 211 153)", 
          "name": "BF Soft Success" 
        },
        
        { 
          "slug": "bf-info", 
          "color": "rgb(96 165 250)", 
          "name": "BF Soft Info" 
        },
        
        { 
          "slug": "bf-warning", 
          "color": "rgb(251 146 60)", 
          "name": "BF Soft Warning" 
        },
        
        { 
          "slug": "bf-danger", 
          "color": "rgb(236 72 153)", 
          "name": "BF Soft Danger" 
        }
      ],

      "background": true,
      "text": true,
      "link": true,
      "custom": true,

      "duotone": [
        {
          "slug": "bf-pink-sunset", 
          "colors": ["#11245e", "#dc4379"], 
          "name": "BF Soft Pink Sunset"
        }
      ],

      "defaultGradients": false,
      "gradients": [
        {
          "slug": "bf-summer-dog", 
          "name": "BF Soft Summer Dog",
          "gradient": "Linear-gradient(#a8ff78, #78ffd6)"
        }
      ]
    },

    "blocks": {
      "core/site-title": {
        "color": {
          "defaultPalette": true,
          "palette": [
            { 
              "slug": "bf-success", 
              "color": "rgb(156 32 128)", 
              "name": "BF Soft Custom" 
            }
          ],
          
          "link": true,
          "custom": false,
          "gradients": [],
          "customGradient": false
        },

        "typography": {
          "fontFamilies": [
            {
              "fontFamily": "Pacifico, sans-serif",
              "slug": "bf-pacifico",
              "name": "BF Soft P"
            }
          ]
        }
      },

      "core/cover": {
        "color": {
          "duotone": [],
          "customDuotone": false
        }
      },

      "core/preformatted": {
        "typography": {
          "fontSizes": [],
          "customFontSize": false
        }
      }
    },

    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },

    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Rubik, sans-serif",
          "slug": "bf-rubik",
          "name": "BF Soft Rubik"
        }
      ],

      "fontSizes": [
        {
          "slug": "small",
          "name": "Small",
          "size": "0.75rem"
        },

        {
          "slug": "medium",
          "name": "Medium",
          "size": "1.25rem"
        },

        {
          "slug": "large",
          "name": "Large",
          "size": "2.25rem"
        },

        {
          "slug": "x-large",
          "name": "Extra Large",
          "size": "3rem"
        },

        {
          "slug": "gigantic",
          "name": "Gigantic",
          "size": "3.75rem"
        }
      ],

      "lineHeight": true,
      "dropCap": true,
      "fontWeight": true,
      "fontStyle": true,
      "letterSpacing": true,
      "textTransform": true,
      "textDecoration": true
    },

    "layout": {
      "contentSize": "800px",
      "wideSize": "1100px"
    },

    "spacing": {
      "margin": true,
      "padding": true,

      "units": [
        "px",
        "rem",
        "%"
      ],

      "blockGap": true
    }
  },

  "styles": {
    "color": {
      "text": "var(--wp--preset--color--bf-gray-700)",
      "background": "var(--wp--preset--color-bf-white)"
    },

    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--bf-primary)"
        }
      }
    },

    "blocks": {
      "core/button": {
        "color": {
          "gradient": "var(--wp--preset--gradient--bf-summer-dog)"
        }
      },

      "core/pullquote": {
        "border": {
          "width": "2px",
          "radius": "10px",
          "style": "Solid",
          "color": "var(--wp--preset--color--bf-primary)"
        }
      },

      "core/site-title": {  
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--bf-pacifico)"
        }
      }
    },

    "typography": {
      "fontFamily": "var(--wp--preset--font-family--bf-rubik)",
      "fontSize": "16px",
      "fontStyle": "normal",
      "fontWeight": "normal",
      "lineHeight": "inherit",
      "textTransform": "none",
      "textDecoration": "none"
    },

    "spacing": {
      "margin": {
        "top": "0px",
        "bottom": "0px",
        "right": "0px",
        "left": "0px"
      },

      "padding": {
        "top": "0px",
        "bottom": "0px",
        "right": "0px",
        "left": "0px"
      },

      "blockGap": "2rem"
    }
  }
}